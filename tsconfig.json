{
    "compilerOptions": {
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "CommonJS",
        "outDir": "dist",
        "removeComments": true,
        "rootDir": "src",
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext"
    },
    "exclude": ["**/node_modules/**", "**/dist/**"],
    "include": ["src"]
}
